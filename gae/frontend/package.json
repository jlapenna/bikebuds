{
  "name": "bikebuds",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://bikebuds.cc/",
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "ajv": "6.0.0",
    "convert-units": "^2.3.4",
    "firebase": "^5.8.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "lodash.clonedeepwith": "^4.5.0",
    "moment": "^2.24.0",
    "prettier": "^1.16.4",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-firebaseui": "^3.1.2",
    "react-google-maps": "^9.4.5",
    "react-moment": "^0.8.4",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.5",
    "recharts": "^1.4.3"
  },
  "repository": "github:jlapenna/bikebuds",
  "scripts": {
    "start": "PORT=8080 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:staged": "CI=true react-scripts test --env=jsdom --findRelatedTests",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run test:staged",
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
